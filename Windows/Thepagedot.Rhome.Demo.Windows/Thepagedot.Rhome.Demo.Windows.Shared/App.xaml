<Application
    x:Class="Thepagedot.Rhome.Demo.Win.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="using:Thepagedot.Rhome.Demo.Win.ViewModels">

    <Application.Resources>
        <!-- View Models -->
        <viewModels:MainViewModel x:Key="MainViewModel" />
        <viewModels:RoomViewModel x:Key="RoomViewModel" />
        <viewModels:SettingsViewModel x:Key="SettingsViewModel" />

        <!-- Colors -->
        <Color x:Key="HomeMaticBlue">#FF071B7C</Color>
        <Color x:Key="SecondaryColor">#555555</Color>
        <Color x:Key="LightGray">#DDDDDD</Color>
        <Color x:Key="StatusBarColor">#333333</Color>

        <SolidColorBrush x:Key="HomeMaticBlueColorBrush" Color="{StaticResource HomeMaticBlue}"/>
        <SolidColorBrush x:Key="SecondaryColorBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="LightGrayColorBrush" Color="{StaticResource LightGray}"/>

    </Application.Resources>

</Application>
